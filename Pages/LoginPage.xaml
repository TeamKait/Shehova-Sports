<Page x:Class="Sports.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sports.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Background="White"
      Title="ИС Спортивные товары - Авторизация"
      KeyDown="HandleKeyDown">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите логин"/>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Введите пароль"/>
            <PasswordBox x:Name="PasswordBox"></PasswordBox>
            <Button x:Name="LoginButton"
                    Content="Войти"
                    Click="LoginButton_Click"
                    Margin="10"
                    ></Button>
            <Button x:Name="GuestButton"
                    Content="Войти как гость"
                    Click="GuestButton_Click"
                    Margin="10"
                    ></Button>
        </StackPanel>
    </Grid>
</Page>
