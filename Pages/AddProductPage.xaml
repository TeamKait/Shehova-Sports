<Page x:Class="Sports.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sports.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox" Width="200"/>

            <TextBlock Text="Категория ID:"/>
            <TextBox x:Name="CategoryIdTextBox" Width="200"/>

            <TextBlock Text="Скидка (%):"/>
            <TextBox x:Name="DiscountTextBox" Width="200"/>

            <TextBlock Text="Количество на складе:"/>
            <TextBox x:Name="StockTextBox" Width="200"/>

            <TextBlock Text="Цена:"/>
            <TextBox x:Name="PriceTextBox" Width="200"/>

            <TextBlock Text="Производитель ID:"/>
            <TextBox x:Name="ManufacturerIdTextBox" Width="200"/>

            <Button Content="Выбрать изображение" Click="ChooseImage_Click" Width="200" Margin="0,10,0,0"/>
            <Image x:Name="PreviewImage" Width="100" Height="100" Stretch="Uniform" Margin="0,10,0,0"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Width="200" Margin="10,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
